module Movement(
//    input left_wall,
//    input right_wall,
    input [1:0] move,
    output [3:0] In
    );

reg [3:0] In_temp;

always @(*) begin
    case(move) 
        0 : In_temp = 4'b0000; // no movement
        1 : In_temp = 4'b1001; // forward
        2 : In_temp = 4'b1010; // right turn
        3 : In_temp = 4'b0101; // left turn
    endcase
end

assign In = In_temp;

//assign In[3] = ~left_wall;
//assign In[0] = ~right_wall;

endmodule
